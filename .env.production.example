# Production Environment Configuration
# Copy this file to .env and update the values

APP_NAME="Toko Beras MVC"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://toko-beras.faiz-dev.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=toko_beras
DB_USERNAME=toko_beras_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Cache Configuration
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@toko-beras.faiz-dev.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (if using)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security Settings
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# Session Security
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# CSRF Protection
CSRF_COOKIE_SECURE=true
CSRF_COOKIE_HTTP_ONLY=true
CSRF_COOKIE_SAME_SITE=lax

# Application Specific Settings
TOKO_BERAS_VERSION=1.0.0
TOKO_BERAS_MAINTENANCE_MODE=false

# Backup Configuration
BACKUP_DISK=local
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Monitoring
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=100

# File Upload Limits
MAX_UPLOAD_SIZE=10240  # 10MB in KB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Business Settings
DEFAULT_CURRENCY=IDR
DEFAULT_TIMEZONE=Asia/Jakarta
DEFAULT_LOCALE=id

# Payment Gateway (if applicable)
PAYMENT_GATEWAY_ENABLED=false
PAYMENT_GATEWAY_SANDBOX=false
PAYMENT_GATEWAY_MERCHANT_ID=
PAYMENT_GATEWAY_SECRET_KEY=

# SMS Gateway (if applicable)
SMS_GATEWAY_ENABLED=false
SMS_GATEWAY_API_KEY=
SMS_GATEWAY_SENDER_ID=

# Social Login (if applicable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URL="${APP_URL}/auth/facebook/callback"

# Analytics
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# CDN Configuration
CDN_URL=
CDN_ENABLED=false

# Performance Settings
OPCACHE_ENABLED=true
REDIS_CACHE_TTL=3600
SESSION_CACHE_TTL=7200

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true
HSTS_ENABLED=true

# API Settings
API_VERSION=v1
API_RATE_LIMIT=1000
API_THROTTLE_ENABLED=true

# Queue Settings
QUEUE_RETRY_AFTER=90
QUEUE_MAX_TRIES=3
QUEUE_TIMEOUT=60

# Maintenance
MAINTENANCE_SECRET=
MAINTENANCE_TEMPLATE=

# Custom Application Settings
STORE_NAME="Toko Beras Faiz"
STORE_ADDRESS="Jl. Contoh No. 123, Jakarta"
STORE_PHONE="+62-21-1234567"
STORE_EMAIL="info@toko-beras.faiz-dev.com"
STORE_WEBSITE="https://toko-beras.faiz-dev.com"

# Business Hours
STORE_OPEN_TIME="08:00"
STORE_CLOSE_TIME="20:00"
STORE_TIMEZONE="Asia/Jakarta"

# Inventory Settings
LOW_STOCK_THRESHOLD=10
AUTO_REORDER_ENABLED=false
STOCK_ALERT_EMAIL="admin@toko-beras.faiz-dev.com"

# Financial Settings
DEFAULT_TAX_RATE=10
CURRENCY_SYMBOL="Rp"
DECIMAL_PLACES=0

# Report Settings
REPORT_CACHE_TTL=1800  # 30 minutes
REPORT_EXPORT_LIMIT=10000
REPORT_RETENTION_DAYS=365

# Notification Settings
NOTIFICATION_CHANNELS=mail,database
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Backup Settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_TIME="02:00"
BACKUP_STORAGE=local
BACKUP_CLEANUP_ENABLED=true

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_URL="${APP_URL}/health"
HEALTH_CHECK_SECRET=

# Feature Flags
FEATURE_ONLINE_ORDERS=true
FEATURE_INVENTORY_TRACKING=true
FEATURE_FINANCIAL_REPORTS=true
FEATURE_USER_MANAGEMENT=true
FEATURE_BACKUP_RESTORE=true

# Third Party Integrations
WHATSAPP_API_ENABLED=false
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER=

# Development/Debug (should be false in production)
APP_DEBUG=false
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
QUERY_LOG_ENABLED=false
